
<link rel="stylesheet" href="~/css/site.css" />
<a href = "/"> Logout </a>
<h3> Welcome to the Wedding Planner! </h3>

@{
                if(ViewBag.status != null){
                    <p>@ViewBag.status[0]</p>
                }
            }
<a href = '/create'> New Wedding </a>

<table border = 1>
    <div class = table>
@{
    
    <tr>
        <td> Wedding </td>
        <td> Date </td>
        <td> Guests </td>
        <td> Action </td>
    </tr>

 @foreach(var wedding in @ViewBag.weddings){
        <tr> 
            <td> @wedding.Wedder1 and @wedding.Wedder2 </td>
            <td> @wedding.WeddingDate.ToString("MMMM dd yyyy")</td>
            <td> @wedding.Invite.Count </td>
            @{ bool attending = false;}
            @if(@wedding.UserId == @ViewBag.UserId){
                 <td><a href="delete/@wedding.WeddingId">Delete</a></td>
            @foreach(var guest in @wedding.Invite){
            @if(@guest.UserId == @ViewBag.UserId)
            {
                attending = true;
            }
        }
        @if(attending){
            <td><a href="Unrsvp/@wedding.WeddingId">Un-RSVP</a></td>
        } else {
            <td><a href="rsvp/@wedding.WeddingId">RSVP</a></td>
        }
            } 
       </tr>
    </div>
    </table>
<a href="/addwedding"><button>Add a Wedding</button></a>



